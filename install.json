{
  "resources": {
    "body": [
      {
        "type": "style",
        "src": "./source/app.css"
      },
      {
        "type": "script",
        "src": "./source/app.js"
      }
    ]
  },
  "preview": {
    "handlers": [
      {
        "options": ["location"],
        "execute": "INSTALL_SCOPE.setOptions(INSTALL_OPTIONS)"
      }
    ]
  },
  "options": {
    "properties": {
      "accountPreviewNotice": {
        "type": "help",
        "helpvalue": "You're viewing a demo store. Connect an Ecwid account to preview your store.",
        "order": 0,
        "showIf": {
          "ecwidAccount": {
            "op": "==",
            "value": ""
          }
        }
      },
      "ecwidAccount": {
        "title": "Ecwid account",
        "description": "Create a free account at Ecwid or connect your existing Ecwid store.",
        "type": "object",
        "format": "account",
        "services": ["ecwid"],
        "required": true,
        "order": 1
      },    
      "location": {
        "title": "Store location",
        "description": "Where should the store appear on your site?",
        "order": 2,
        "type": "object",
        "format": "element",
        "default": {
          "selector": "body",
          "method": "prepend"
        }
      }
    }
  }
}
